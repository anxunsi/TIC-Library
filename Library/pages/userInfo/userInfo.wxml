<!--pages/userInfo/userInfo.wxml-->
<view class='all'>
  <view class='infoList'>
    <text class='infoTitle'>性别</text>
    <picker class='infoContent'
            mode='selector' 
            range='{{selection}}'
            value='{{gender}}'
            bindchange='changeGender'>
            <view>{{selection[gender]}}</view></picker>
    <image class='icon-right' src='../../images/right.png'></image>
  </view>
  
  <view class='infoList'>
    <text class='infoTitle'>出生日期</text>
    <picker class='infoContent'
            mode='date' 
            start='1970-01-01'
            end='{{todate}}'
            value='{{birthday}}'
            fields='day'
            bindchange='changeBirthday'>
            <view>{{birthday}}</view></picker>
    <image class='icon-right' src='../../images/right.png'></image>
  </view>

  <view class='infoList'>
    <text class='infoTitle'>个人介绍</text>
    <textarea fixed='true'
              class='infoText'
              placeholder='{{introduce}}'
              maxlength='50' 
              bindblur='changeIntroduce'></textarea>
    <image class='icon-right' src='../../images/right.png'></image>
  </view>

  <view class='blank'></view>

  <view class='infoList'>
    <text class='infoTitle'>手机号</text>
    <textarea fixed='true'
              class='infoText'
              placeholder='{{phone}}'
              maxlength='11' 
              bindblur='changePhone'></textarea>
    <image class='icon-right' src='../../images/right.png'></image>
  </view>
  
  <view class='infoList'>
    <text class='infoTitle'>收货地址</text>
    <textarea fixed='true'
              class='infoText'
              placeholder='{{address}}'
              maxlength='50' 
              bindblur='changeAddress'></textarea>
    <image class='icon-right' src='../../images/right.png'></image>
  </view>

  <view class='save-btn' bindtap='savebtn'>保存</view>
</view>
