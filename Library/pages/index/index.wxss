/**index.wxss**/

.all {
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.search-top{
  background: #FF6347;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index_search_btn {
  height: 70rpx;
  width: 90%;
  background-color: white;
  color: #a1a1a1;
  font-size: 30rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 35px;
}

.index_search {
  margin-right: 3px;
  width: 16px;
  height: 16px;
}
.tab-h{
    height: 80rpx;
    width: 100%; 
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: white; 
    font-size: 32rpx; 
    white-space: nowrap; 
    z-index: 99;
}
.tab-item{
  margin:0 36rpx;
  display: inline-block;
}
.tab-item.active{
  color: #FF6347;
  position: relative;
}
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 5rpx;
  width: 100%;
  background: #FF6347;
  position: absolute; 
  bottom: 0;left: 5rpx;
  border-radius: 16rpx;
}

.tab-content{
  margin-top: 0rpx;
}
.scoll-h{
  height: 100%;
}

navigator{
  display:inline;
}
.list{
  column-count: 2;
  column-gap: 20rpx;
  padding: 20rpx;

}
 
.list_item{
  width: 98%;
  margin-bottom: 20rpx;
  border: 2rpx solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 10rpx 5rpx 3rpx #cccccc;
  position: relative;
  transition: opacity .4s ease-in-out;
  display: inline-block;

}

.img image{
  border-radius: 15rpx;
  width: 100%;
  height: 100%;
}

.title{
  color:#333;
  margin-left:10rpx;
  margin-top:10rpx;
  font-size: 32rpx;
  width: 100%;
}
 
.price{
  color:#FF2727;
  margin-left:10rpx;
  margin-top:10rpx;
  font-size:32rpx;
}
.num{
  font-size: 32rpx;
  margin-left:10rpx;
  margin-top:10rpx;
}
.blank{
  margin-top: 10rpx;
  border: 1rpx solid #F4F4F4;
  border-radius: 5rpx;
}
.user-info{
  font-size: 32rpx;
  margin-left:10rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}



